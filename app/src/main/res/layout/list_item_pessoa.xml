<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/lblNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nome: "
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matheus"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/lblIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="  Idade: "
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/lblFaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Faixa: "
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvFaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adulto"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/lblSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Sexo:"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgMasculino"
                android:src="@drawable/masculino"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/imgFeminino"
                android:src="@drawable/feminino"
                android:layout_width="40dp"
                android:layout_height="40dp"/>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>