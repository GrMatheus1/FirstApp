<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PessoaDetailFragment"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/lblDetalheNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Nome: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvDetalheNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Robertin"
        app:layout_constraintStart_toEndOf="@+id/lblDetalheNome"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheNome"
        app:layout_constraintTop_toTopOf="@id/lblDetalheNome"
        />

    <TextView
        android:id="@+id/lblDetalheIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/lblDetalheNome"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Idade: " />
    <TextView
        android:id="@+id/tvDetalheIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="16 anos"
        app:layout_constraintStart_toEndOf="@+id/lblDetalheIdade"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheIdade"
        app:layout_constraintTop_toTopOf="@id/lblDetalheIdade"
        />
    <TextView
        android:id="@+id/lblDetalheFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Faixa EtÃ¡ria: "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/lblDetalheIdade"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvDetalheFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Muleke"
        app:layout_constraintStart_toEndOf="@+id/lblDetalheFaixa"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheFaixa"
        app:layout_constraintTop_toTopOf="@id/lblDetalheFaixa"
        />

    <TextView
        android:id="@+id/lblDetalheSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/lblDetalheFaixa"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sexo: " />

    <ImageView
        android:id="@+id/imgDetalheMasculino"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/lblDetalheSexo"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheSexo"
        app:layout_constraintTop_toTopOf="@id/lblDetalheSexo"
        android:src="@drawable/masculino"
       />
    <ImageView
        android:id="@+id/imgDetalheFeminino"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/imgDetalheMasculino"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheSexo"
        app:layout_constraintTop_toTopOf="@id/lblDetalheSexo"
        android:src="@drawable/feminino"/>

    <ImageView
        android:id="@+id/imgslkparsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/slk_parsa"
        app:layout_constraintTop_toTopOf="@+id/lblDetalheSexo"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>